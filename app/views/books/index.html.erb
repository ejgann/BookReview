<h1>Your Books</h1>

<% if current_user.books.exists? %>
  <table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% current_user.books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.description %></td>
        <td><%= link_to 'Details', book_path(book) %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Delete', book_path(book),
                method: :delete,
                data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
      </tbody>
  </table>

    <% else %>
        <p>You have not added any books. </p>
    <% end %>

<br></br>
<%= link_to 'Add a Book', new_book_path %>